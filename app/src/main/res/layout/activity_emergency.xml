<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.salil.shoutforhelp.emergency">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:columnCount="2"
        android:rowCount="3"

        >

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="phone"
            android:tag="0"
            android:layout_margin="4sp"
            android:text="National\nEmergency "
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:background="@android:color/holo_green_dark"
            android:layout_rowWeight="1"
            />
        <Button
            android:id="@+id/button_2"
            android:layout_margin="4sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="phone"
            android:tag="1"
            android:text="Police"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_blue_bright"

            />
        <Button
            android:id="@+id/button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="phone"
            android:tag="2"
            android:text="Fire"
            android:layout_column="0"
            android:layout_margin="4sp"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_red_dark"

            />
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="phone"
            android:tag="3"
            android:layout_margin="4sp"
            android:text="Ambulance"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@android:color/holo_purple"

            />
        <Button
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="4sp"
            android:layout_alignParentTop="true"
            android:onClick="phone"
            android:tag="4"
            android:background="@android:color/holo_orange_light"
            android:text="LPG Leak\nhelpline"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />
        <Button
            android:id="@+id/custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="4sp"
            android:layout_alignParentTop="true"
            android:onClick="phone"
            android:background="@android:color/holo_blue_dark"
            android:tag="5"
            android:text="women \nhelpline"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />
        <Button
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="4sp"
            android:layout_alignParentTop="true"
            android:onClick="phone"
            android:background="@android:color/holo_green_light"
            android:tag="6"
            android:text="indian railway\nsecurity"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />
        <Button
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="4sp"
            android:layout_alignParentTop="true"
            android:onClick="phone"
            android:background="@android:color/holo_purple"
            android:tag="7"
            android:text="disaster\nmanagement"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />



    </GridLayout>

</RelativeLayout>
